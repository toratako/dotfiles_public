{
  "plugins": {
    "latex2e": false
  },
  "filters": {},
  "rules": {
    "terminology": true,
    "preset-japanese": {
      "sentence-length": {
        "max": 3000
      }
    },
    "preset-ja-spacing": false,
    "ja-hiraku": {
      "daimeishi": true,
      "fukujoshi": true,
      "fukushi": false,
      "hojodoushi": true,
      "hojokeiyoushi": true,
      "keishikimeishi": false,
      "other-doushi": false,
      "other-jodoushi": false,
      "other-kandoushi": false,
      "other-keiyoushi": false,
      "other-meishi": false,
      "rentaishi": true,
      "setsuzokushi": true
    },
    "preset-ja-technical-writing": {
      "ja-no-mixed-period": {
        "periodMark": [
          "。",
          "．",
          ":"
        ]
      },
      "max-comma": {
        "max": 20
      },
      "sentence-length": {
        "max": 3000
      },
      "no-exclamation-question-mark": false
    },
    "@textlint-ja/preset-ai-writing": {
      "ai-tech-writing-guideline": {
        "severity": "info"
      }
    }
  }
}
