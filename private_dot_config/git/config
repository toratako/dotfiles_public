[include]
    # !!warn!! place this file correctly
    path = ~/.config/git/config.local

# Thanks: https://www.reddit.com/r/commandline/comments/wf7oju/post_your_favorite_git_aliases/, https://gist.github.com/mwhite/6887990
# !!DON'T USE/CREATE DANGEROUS ABBREVIATIONS!!
[alias]
    a = add .
    aa = add -A
    ap = add -p

    c = commit
    cm = commit -m
    ca = commit --amend
    cam = commit --amend -m
    can = commit --amend --no-edit
    fixup = commit --fixup

    sw = switch
    swc = switch -c

    b = branch

    d = diff
    ds = diff --staged

    lo = log --oneline --graph --decorate
    la = log --oneline --graph --decorate --all
    ll = log --graph --decorate --all --date=iso-local --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]"
    lg = log --graph --abbrev-commit --decorate --date=relative \
             --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)'

    st = stash
    stp = stash pop
    stl = stash list

    s = status -sb
    unstage = reset HEAD --
    uncommit = reset --soft HEAD~1
    last = log -1 HEAD
    root = rev-parse --show-toplevel
    whoami = config user.email

[url "git@github.com:"]
    pushInsteadOf = https://github.com/

[url "git@gitlab.com:"]
    pushInsteadOf = https://gitlab.com/

[color]
    ui = auto
    diff = auto
    status = auto
    branch = auto

[ghq]
    root = ~/repos/

# Thanks: https://github.com/dandavison/delta
[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    dark = true
    line-numbers = true
    side-by-side = true

[merge]
    conflictStyle = zdiff3

# Thanks: https://blog.gitbutler.com/how-git-core-devs-configure-git
# clearly makes git better

[column]
    ui = auto
[branch]
    sort = -committerdate
[tag]
    sort = version:refname
[init]
    defaultBranch = main
[diff]
    algorithm = histogram
    colorMoved = plain
    mnemonicPrefix = true
    renames = true
[push]
    default = simple
    autoSetupRemote = true
    followTags = true
[fetch]
    prune = true
    pruneTags = true
    all = true

# why the hell not?

[help]
    autocorrect = false
[commit]
    verbose = true
[rerere]
    enabled = true
    autoupdate = true
[core]
    excludesfile = ~/.gitignore
[rebase]
    autoSquash = true
    autoStash = true
    updateRefs = true

# a matter of taste (uncomment if you dare)

[core]
    # fsmonitor = true
    untrackedCache = true
[pull]
   # rebase = true
